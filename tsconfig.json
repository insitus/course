{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist/"
  },
  "exclude": [
    "./**/node_modules/**/*"
  ],
  "include": [
    "./src/**/*",
    "./custom.d.ts"
  ]
}
